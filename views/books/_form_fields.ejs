
  <div class="form-group">
    <input class="form-control" placeholder="باقة الملف" type="text" name="title" value="<%= book.title %>">
  </div>

  <div class="form-group">
    <select class="form-control" placeholder="المطور" name="author">
    <% authors.forEach(author => { %>
        <% if (author.id === book.author) { %>
          <option selected label="<%= author.name %>" value="<%= author.id %>">
        <% } else { %>
          <option label="<%= author.name %>" value="<%= author.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>


<div class="form-group">
  <div class="form-item">
    <p>تاريخ الرفع</p>
    <input  type="date" name="publishDate"
          value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
  </div></div>

  <div class="form-group">
    <input class="form-control" placeholder="السعر" type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
  </div>


<div class="form-group">
  <textarea class="form-control" placeholder="وصف الملف" name="description"><%= book.description %></textarea>
</div>
<div class="form-group">
  <div class="form-item form-item-no-grow">
    <input  placeholder="المطور" type="file" name="cover" class="book-cover filepond">
  </div>

</div>
