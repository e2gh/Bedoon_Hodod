<section class="special-area bg-white section_padding_100" id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-5 mx-auto">
        <div class="logo mb-3">
          <div class="col-md-12 text-center">
            <h2 class="purple mt-40">ابحث عن منتج</h2>
          </div>
        </div>

<form action="/books" method="GET">
  <div class="form-group" >
    <input type="text" name="title" class="form-control"  placeholder="باقة المنتج"  value="<%= searchOptions.title %>">
  </div>
    <div class="form-group">
      <label>تاريخ الرفع من</label>
      <input class="form-control" type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>">
    </div>
    <div class="form-group" >
      <label>إلى</label>
      <input  class="form-control" type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>">
    </div>

    <div class="col-md-12 text-center ">
      <button type="submit" class="btn submit-btn"> ابحث</button>
    </div>

</form>
  </div>  </div>  </div>

<%- include('../partials/bookGrid', { books: books, large: true }) %>
</section>
